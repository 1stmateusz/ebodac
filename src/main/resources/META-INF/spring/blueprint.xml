<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <import resource="classpath*:META-INF/motech/applicationContext.xml" />

    <security:global-method-security pre-post-annotations="enabled" proxy-target-class="true"/>

    <osgi:service ref="ebodacService"
        interface="org.motechproject.ebodac.service.EbodacService" />

    <osgi:service ref="subjectRegistrationService"
        interface="org.motechproject.ebodac.service.SubjectRegistrationService" />

    <osgi:reference id="subjectRegistrationDataService"
                    interface="org.motechproject.ebodac.repository.SubjectRegistrationDataService" />

    <osgi:service ref="ebodacSettingsService"
        interface="org.motechproject.ebodac.service.EbodacSettingsService" />

    <osgi:reference id="configurationServiceOsgi" interface="org.motechproject.config.service.ConfigurationService" />

</beans>
